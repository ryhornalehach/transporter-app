<div class="row">
  <div class="col s12">
    <% if current_user && current_user.admin? %>
      <ul><h5><b>Name:</b> <%= "#{@user.first_name} #{@user.last_name}" %></h5></ul>
      <ul><h5><b>Address:</b> <%= "#{@user.address}, #{@user.city}, #{@user.state}, #{@user.zip}" %></h5></ul>
      <ul><h5><b>Phone:</b> <%= @user.phone %></h5></ul>
      <ul><h5><b>Email:</b> <%= @user.email %></h5></ul>
    <%else%>
      <div class="row">
        <div class="col s12">
          <h3>Hello <%= @user.first_name.capitalize %>!</h3>
        </div>
      </div>
    <%end%>
    <% if @user.profile_photo.file.nil? %>
      <ul><img src=<%= asset_path('avatar.jpg')%> height="150", class= "circle" ></ul>
    <% else %>
      <ul><img src=<%= @user.profile_photo %> height="150", class= "circle" ></ul>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <% if current_user && current_user.admin? %>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "btn waves-effect waves-light navbar-color-dark" %>
      <%= link_to "Delete User", user_path(@user), method: :delete, data: {confirm: "Are You Sure?"}, class: 'waves-effect waves-light btn red' %>
    <%else%>
      <%= link_to "Edit My Profile", edit_user_registration_path, class: "btn waves-effect waves-light navbar-color-dark" %>
    <%end%>
  </div>
</div>
