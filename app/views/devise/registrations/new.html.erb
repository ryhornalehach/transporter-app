<div class="row">
  <div class="col s12">
    <h3>Sign up</h3>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :first_name, class: 'active' %>
      <%= f.text_field :first_name %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :last_name, class: 'active' %>
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :address, class: 'active' %>
      <%= f.text_field :address %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :city, class: 'active' %>
      <%= f.text_field :city %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :state, class: 'active' %>
      <%= f.text_field :state %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :zip, class: 'active' %>
      <%= f.text_field :zip %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :phone, class: 'active' %>
      <%= f.text_field :phone %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :email, class: 'active' %>
      <%= f.email_field :email , :required => true %>
    </div>
  </div>

  <div class="row">
    <div class="file-field input-field col s12 l6">
      <div class="btn navbar-color-dark">
        <span>Photo</span>
        <%= f.file_field :profile_photo, id: "upload"%>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate", placeholder="Upload My Avatar Picture">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" , :required => true %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" , :required => true %>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.submit "Sign up", class: "btn waves-effect waves-light navbar-color-dark" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
